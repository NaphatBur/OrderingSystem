<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.app.ordering.orderingsystem.OrderSelected">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Meal by Yourself"
            android:textSize="32dp"
            android:paddingTop="30dp"
            android:textColor="@color/blueTwitter"
            android:layout_gravity="top|center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_gotoSetFood"
                android:layout_width="250dp"
                android:layout_height="250dp"
                fancy:fb_defaultColor="#55acee"
                fancy:fb_focusColor="@color/aluminum"
                fancy:fb_iconResource="@drawable/food_icon_new"
                fancy:fb_iconPaddingLeft="30dp"
                fancy:fb_iconPaddingRight="30dp"
                fancy:fb_radius="256dp"
                fancy:fb_textColor="#FFFFFF"
                android:gravity="center"
                fancy:fb_borderWidth="5dp"
                fancy:fb_borderColor="@color/aluminum"
                android:layout_gravity="center"/>
        </LinearLayout>/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:background="@color/blueTwitter">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Food"
            android:textSize="32dp"
            android:paddingTop="30dp"
            android:textColor="@color/white"
            android:layout_gravity="top|center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_gotoOrder"
                android:layout_width="250dp"
                android:layout_height="250dp"
                fancy:fb_defaultColor="@color/white"
                fancy:fb_focusColor="@color/aluminum"
                fancy:fb_iconResource="@drawable/catering_icon"
                fancy:fb_iconPaddingLeft="30dp"
                fancy:fb_iconPaddingRight="30dp"
                fancy:fb_radius="256dp"
                fancy:fb_borderWidth="5dp"
                fancy:fb_borderColor="@color/aluminum"
                fancy:fb_textColor="#55acee"/>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>
